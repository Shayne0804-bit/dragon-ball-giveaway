# Serveur
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/giveaways

# Admin
ADMIN_PASSWORD=admin123

# CORS
CORS_ORIGIN=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# ===========================
# Bot Discord - NOUVEAU
# ===========================
# Obtenir le token: https://discord.com/developers/applications
# Remplacez par votre token réel
DISCORD_BOT_TOKEN=votre_token_du_bot_ici

# ID du canal Discord où envoyer les notifications
# Activez le mode développeur dans Discord et copiez l'ID du canal
DISCORD_CHANNEL_ID=votre_id_du_canal_ici

# Session Secret
SESSION_SECRET=votre_secret_de_session_change_moi