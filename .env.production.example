# .env.production.example
# Exemple de configuration pour production (Railway)
# Copier les valeurs et les remplir avec vos données réelles

# ============================================
# MONGODB - Base de données
# ============================================
# Obtenez une connexion depuis MongoDB Atlas
# Format: mongodb+srv://username:password@host/database
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/giveaways?retryWrites=true&w=majority
MONGODB_USER=
MONGODB_PASSWORD=

# ============================================
# SERVER - Configuration du serveur
# ============================================
PORT=5000
NODE_ENV=production

# ============================================
# SECURITY - Sécurité
# ============================================
# Générez une clé secrète sécurisée longue
SESSION_SECRET=changez_moi_par_une_clé_très_secrète_et_aléatoire_12345789
ADMIN_PASSWORD=changez_moi_par_un_mot_de_passe_sécurisé

# Rate limiting
RATE_LIMIT_WINDOW_MS=9000000
RATE_LIMIT_MAX_REQUESTS=500
ANTI_SPAM_MINUTES=300

# ============================================
# CORS - Domaines autorisés
# ============================================
# Remplacez par votre vrai domaine Railway
CORS_ORIGIN=https://votre-app.railway.app
RAILWAY_PUBLIC_DOMAIN=votre-app.railway.app

# ============================================
# DISCORD - Configuration Discord OAuth2 & Bot
# ============================================
# Obtenez ces valeurs depuis Discord Developer Portal
# https://discord.com/developers/applications

# OAuth2
DISCORD_CLIENT_ID=votre_application_id
DISCORD_CLIENT_SECRET=votre_client_secret
DISCORD_CALLBACK_URL=https://votre-app.railway.app/api/auth/discord/callback
DISCORD_GUILD_ID=votre_guild_id

# Bot
BOT_ENABLED=true
DISCORD_BOT_TOKEN=votre_bot_token
DISCORD_CHANNEL_ID=votre_channel_id_pour_notifications

# ============================================
# TWITTER - Configuration RSS (gratuit)
# ============================================
# Pas d'API key requise, utilise RSS de Nitter
TWITTER_ACCOUNT=@votre_compte_twitter
DISCORD_TWEET_CHANNEL_ID=votre_channel_id_pour_tweets
TWEET_CHECK_INTERVAL=30

# ============================================
# WHATSAPP - Configuration WhatsApp Bot
# ============================================
# En production: Mode Baileys avec Pairing Codes
WHATSAPP_ENABLED=true

# Numéro du bot WhatsApp (pour le pairing code)
# Format: +XXX0000000000 (sans espaces pour Baileys)
WHATSAPP_PHONE_NUMBER=+225017188860

# Numéros admin/owner autorisés pour les commandes
# Format: +XXX0000000000,+XXX0000000000 (séparés par virgules, sans espaces)
WHATSAPP_OWNER_NUMBERS=+2290154959093,+225758652488

# ============================================
# OPTIONNEL - Variables avancées
# ============================================
# Décommenter si besoin
# LOG_LEVEL=info
# DEBUG=false
